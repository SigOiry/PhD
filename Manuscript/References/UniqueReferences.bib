@Article{Barille2010,
  AUTHOR = {Barill{\'{e}}, Laurent and Robin, Marc and Harin, Nicolas and Bargain, Anna{\"{e}}lle and Launeau, Patrick},
  JOURNAL = {Aquatic Botany},
