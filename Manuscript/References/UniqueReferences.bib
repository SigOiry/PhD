@Article{Lv2020,
  AUTHOR = {Lv, Wenjing and Wang, Xiaofei},
  JOURNAL = {Journal of Sensors},
  TITLE = {{Overview of Hyperspectral Image Classification}},
  VOLUME = {2020},
  YEAR = {2020},
  ISSN = {16877268},
