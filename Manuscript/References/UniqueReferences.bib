@Article{Kutser2006a,
  ANNOTE = {faisabilit{\'{e}} de cartographie couverture macroalgues benthiques par t{\'{e}}l{\'{e}}d{\'{e}}tection au niveau esp{\`{e}}ces tr{\`{e}}},
