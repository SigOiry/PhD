keywords = {Altered behaviour,Castration,Food webs,Host survival,Rocky shores,Soft-sediment flats,Trematodes},
number = {SUPPL.},
pmid = {12396219},
title = {{Parasitism, community structure and biodiversity in intertidal ecosystems}},
volume = {124},
year = {2002}
}
