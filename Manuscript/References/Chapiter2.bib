issn = {23519894},
journal = {Global Ecology and Conservation},
keywords = {Crassostrea gigas,Drones,Ecology & conservation,Estuarine,Oyster reefs,RGB & multispectral,Remote sensing},
number = {May},
pages = {e01810},
publisher = {Elsevier B.V.},
title = {{Multispectral low altitude remote sensing of wild oyster reefs}},
