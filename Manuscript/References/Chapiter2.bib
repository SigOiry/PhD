keywords = {2D imager,Calibration,Drone,Hyperspectral,Imaging spectroscopy,Low-altitude,Multispectral,Pushbroom,Remote sensing,Remotely Piloted Aircraft Systems (RPAS),Sensors,Snapshot,Spectral,Spectroradiometers,Unmanned aerial systems (UAS),Unmanned aerial vehicles},
