journal = {IEEE Transactions on Geoscience and Remote Sensing},
keywords = {Active learning,Markov random field (MRF),hyperspectral image classification,multilevel logistic (MLL) model,multinomial logistic regression (MLR),semisupervised learning},
number = {11},
pages = {4085--4098},
title = {{Semisupervised hyperspectral image segmentation using multinomial logistic regression with active learning}},
volume = {48},
year = {2010}
}
@article{Huang2006,
