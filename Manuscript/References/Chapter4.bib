@Article{rs14133124,
    AUTHOR = {Diruit, Wendy and Le Bris, Anthony and Bajjouk, Touria and Richier, Sophie and Helias, Mathieu and Burel, Thomas and Lennon, Marc and Guyot, Alexandre and Ar Gall, Erwan},
    TITLE = {Seaweed Habitats on the Shore: Characterization through Hyperspectral UAV Imagery and Field Sampling},
    JOURNAL = {Remote Sensing},
    VOLUME = {14},
